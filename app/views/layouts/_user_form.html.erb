<form action="<%= action %>" method="post">
  <%= render "shared/auth" %>
  
  <label>
    Username
    <input type="text" name="user[username]" value="<%= @user.username if @user %>">
  </label>
  
  <label>
    Password
    <input type="password" name="user[password]" value="<%= @user.password if @user %>">
  </label>
  
  <input type="submit" value="<%= submit %>">
</form>